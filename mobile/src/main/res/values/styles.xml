<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/primary_text</item>

        <item name="android:textColorPrimary">@drawable/text_primary</item>
        <item name="android:textColorSecondary">@drawable/text_secondary</item>

        <item name="asb_switchStyle">@style/Aria2Switch</item>
        <item name="asb_switchPreferenceStyle">@style/Preference.SwitchPreference</item>
    </style>

    <style name="JsFrontendTheme" parent="AppTheme"/>

    <style name="Preference.SwitchPreference" parent="">
        <item name="android:layout">@layout/pref_box</item>
        <item name="android:widgetLayout">@layout/preference_widget_switch</item>
        <item name="asb_switchTextOn">@string/switch_on</item>
        <item name="asb_switchTextOff">@string/switch_off</item>
    </style>

    <style name="Aria2Switch" parent="Widget.Holo.CompoundButton.Switch">
        <item name="asb_track">@drawable/aria2_switch_track_holo_light</item>
        <item name="asb_thumb">@drawable/aria2_switch_inner_holo_light</item>
        <item name="asb_switchTextAppearance">@style/Aria2SwitchText</item>
    </style>

    <style name="Aria2SwitchText" parent="TextAppearance.Holo.Widget.Switch">
        <item name="android:textColor">@color/secondary_text</item>
    </style>
</resources>
